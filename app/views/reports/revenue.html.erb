<div class="card card-default">
	<div class="card-header card-header-border-bottom">
		<h2>Revenue Reports</h2>
	</div>
	<%= column_chart Order.group_by_day_of_week(:created_at, format: "%a").maximum(:total),xtitle: "Day", ytitle: "Revenue" ,colors: ["green","orange","blue","red"]%><br>
	<div class="card-body">
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th width="20%">Date</th>
					<th>Revenue</th>
				</tr>
			</thead>

			<tbody>
				<% total = 0 %>
				<% @orders.each do |order| %>
					<tr>
						<td><%= (order.revenue_date) %></td>
						<td><%=  order.revenue_amount %></td>
					</tr>

					<% total += order.revenue_amount %>
				<% end %>
				<tr>
					<td>Total</td>
					<td><%=  total %></td>
				</tr>
			</tbody>
		</table>
		<div class="digg_pagination">
			<%= will_paginate @orders %>
		</div>
	</div>
</div>
