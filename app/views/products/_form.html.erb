<% if @product.errors.any? %>
  <% @product.errors.full_messages.each do |message| %>
  <p>  <%= message %></p>
	<%end%>
<%end %>

<div class="card card-default">
	<div class="card-header card-header-border-bottom">
		<h2>Product</h2>
	</div>
	<div class="card-body">
		<%= form_with(model: product, local: true, :class => 'horizontal-form') do |form| %>

			<div class="form-group row">
				<div class="col-12 col-md-3 text-right">
					<%= form.label :name %>
				</div>
				<div class="col-12 col-md-9">
					<%= form.text_field :name, :class => 'form-control' %>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-12 col-md-3 text-right">
					<%= form.label :price %>
				</div>
				<div class="col-12 col-md-9">
					<%= form.text_field :price, :class => 'form-control' %>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-12 col-md-3 text-right">
					<%= form.label :stock %>
				</div>
				<div class="col-12 col-md-9">
					<%= form.text_field :stock, :class => 'form-control' %>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-12 col-md-3 text-right">
					<%= form.label :product_image %>
				</div>
				<div class="col-12 col-md-9">
					<%= form.file_field :product_image, :class => 'form-control' %>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-12 col-md-3 text-right">
					<%= form.label :description %>
				</div>
				<div class="col-12 col-md-9">
					<%= form.text_area :description, :class => 'form-control' %>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-12 col-md-3 text-right">
					<%= form.label :status %>
				</div>
				<div class="col-12 col-md-9">
					<!-- <%= form.number_field :status %> -->
					<%= form.select :status, @status, {:include_blank => '-- Status --'}, { :class => 'form-control' } %>
				</div>
			</div>
			<div class="form-footer pt-5 border-top">
				<%= form.submit :class => 'btn btn-primary btn-default'%>
				<%= link_to 'Back to products', products_path %>
			</div>
		<% end %>
	</div>
</div>
