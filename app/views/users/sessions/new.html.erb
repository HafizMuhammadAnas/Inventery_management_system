<h2>Log in</h2>
<div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-6 mb-5 mb-lg-0">

         <div class= "card shadow text-white bg-dark mb-3" style="border-radius: 1rem;">

           <div class= "card-header">
              <h2 class= "card-title text-center">Sign In</h2>
           </div>
             <div class= "card-body p-5 text-center">

              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                  <%= f.input :email,
                              required: false,
                              autofocus: true,
                              input_html: { autocomplete: "email" } %>
                  <%= f.input :password,
                              required: false,
                              input_html: { autocomplete: "current-password" } %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Log in" %>
                </div>
              <% end %>

              <%= render "users/shared/links" %>
              <hr class="my-5">

            <button class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;"
              size="submit"><i class="fab fa-google me-2"></i> Sign in with google</button>
            <button class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;"
              size="submit"><i class="fab fa-facebook-f mb-2"></i>Sign in with facebook</button>


             </div>
         </div>
       </div>
     </div>
    </div>


